/* miniprogram/pages/index/index.wxss */

.index-page {
  overflow-y: auto;
}


/* 用户定位 */
.location{
  background: #37bbce;
  color: white;
  height: 5vh;
}
.location-icon {
  vertical-align: middle;
  padding-left: 5rpx;
}
.location-address{
  margin: 0 0 0 5rpx;
}

/* 搜索框 */

.searchInput-session {
	background: #37bbce ;
	height: 8vh;
	
}
.search-wrapper {
	width: 90%;
	height: 5vh;
	line-height: 5vh;
	background: rgb(245, 234, 234);
	color: rgb(184, 180, 174);
	border-radius: 50rpx;
	display: flex;
	text-align: center;
	margin-left: 5%;
}

.search-icon {
	vertical-align: middle;
	padding-left: 100rpx;
}


/* 样式 */
.van-search__content .van-search__content--square{
	border-radius: 50%;
}


/* 商品导航列表 */
.categoryMenu {
  height: 350rpx;
}
.categoryTab {
  margin-top: 30rpx;
}
.category-info {
  display: inline-block;
  text-align: center;
  width: 25%;
}
.category-image {
  width: 100rpx;
  height:100rpx;
}
.category-text {
  text-align: center;
  font-size: 14px;
  color: #696767;
}

/* 活动秒杀 */
.activity-session {
  display: flex;
  margin: 40rpx;
  justify-content: space-between;
}

.content-name {
  font-size: 13pt;
  font-weight: 500;
}
/* 倒计时 */
.item {  
  display: inline-block;
  width: 22px;
  margin-right: 5px;
  color: #fff;
  font-size: 12px;
  text-align: center;
  background-color: #37bbce;
  border-radius: 2px;
}
.time-account {
  color: #37bbce;
  display: flex;
}
.content-img image{
  width: 300rpx;
  height:200rpx;
  border-radius: 10rpx;
}
.content-brief {
  color: #666;
  font-size: 11pt;
}
