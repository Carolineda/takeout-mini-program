/* 标签tab部分 */
.tab-session {
 height: calc(100vh - 40vh);
 position: sticky;
 top: 0px;
  z-index: 2;
  background: #fff;
}
.tab {
  display: -ms-flexbox;
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 40px;
  line-height: 40px;

  position: relative;
}

.tab .tab-item {
    -ms-flex: 1;
    width: 70rpx;
    text-align: center;
}

.tab .tab-item a {
  display: block;
  font-size: 14px;
  color: #4d555d;
}

.tab .tab-item .active {
   border-bottom: 2px solid rgb(35, 149, 255);
   width: 70rpx;

}


