/* components/recommendHeader/recommendHeader.wxss */
.recommend-tabs {
  /* margin-top: 30rpx; */
  display: flex;
  text-align: center;
  color: #666
}
.tab-item {
  white-space: nowrap;
  flex:1
}

/* 显示面板 */
.shou-down-session {
  border-top: 1rpx solid  #ddd;
  background: #fff;
  height: 40%;
  z-index: 33;
}
.li-style {
  display: block;
  height:80rpx;
  line-height: 60rpx;
  color: #666;
  font-size: 1.1rem;
  margin-left: 20rpx;
}

/* 引入的“综合排序”下拉组件 */
.van-dropdown-menu {
  background-color:transparent;
  background-color: #f6f6f6!important;
  height: 35rpx!important; 
}
.van-dropdown-menu__title {
  color: #666;
}

.recommend-nearby {
  margin-top: 40rpx;
}
.recommend-title::before{
  display: block;
  content: "";
  margin-right: 20rpx;
  width: 5.333333vw;
  height: .266667vw;
  background-color: #999;
}
.recommend-title::after{
  display: block;
  content: "";
  width: 5.333333vw;
  margin-left: 20rpx;
  height: .266667vw;
  background-color: #999;
}
.recommend-title{
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 显示商家列表 */
.store-session {
  margin-top: 30rpx;
}
.store-block {
  display: flex;
  padding-left: 30rpx;
  margin-bottom: 40rpx;
}
.url-img image {
  width: 170rpx;
  height: 170rpx;
  border-radius: .533333vw
}
.store-right {
  margin-left: 30rpx;
}
.store-name{
  color: black;
  font-size: 14pt;
  font-family: 'Helvetica Neue',Tahoma,Arial,'PingFangSC-Regular','Hiragino San';
}
.common-font-style {
  color: #666666;
  font-size: 11pt;
  padding: 10rpx;
} 

.tag{
  width: 20vw;
  border:1rpx solid rgb(221, 221, 221);
  border-radius: 5rpx;
  color: #666666;
  font-size: 11pt;
  text-align: center;
}